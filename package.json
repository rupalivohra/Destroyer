{
  "name": "destroyer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "interact.js",
  "scripts": {
    "start": "node --loader ts-node/esm interact.js",
    "dev": "nodemon --watch \"./**/*.{ts,js}\" --exec \"node --loader ts-node/esm interact.js\"",
    "build": "tsc -p tsconfig.json",
    "start:built": "node interact.js",
    "test": "yarn build && NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.0"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "swc": false
  }
}
